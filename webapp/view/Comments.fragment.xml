<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Enter Comments" >
        <content>
          <TextArea width="400px" height="200px" change="onEnterComments" placeholder="Enter Rejection Comments" />
        </content>
        <beginButton>
            <Button enabled="false" text="OK" press="onPressOkButton"/>
        </beginButton>
        <endButton>
        <Button text="Cancel" press="onPressCancelButton"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>